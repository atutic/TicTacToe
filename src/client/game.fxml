<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="client.GameController" prefHeight="400.0" prefWidth="350.0" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label fx:id="statusLabel" text="Warte auf Spielstart..." BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets top="10.0" bottom="10.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <GridPane fx:id="gameGrid" hgap="5" vgap="5">
            <padding>
                <Insets all="10"/>
            </padding>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
             <Label fx:id="infoLabel" text="Du bist: | Am Zug: ">
                <font>
                    <Font size="14.0" />
                </font>
            </HBox>
            <BorderPane.margin>
                <Insets bottom="10.0"/>
            </BorderPane.margin>
    </bottom>
</BorderPane>
