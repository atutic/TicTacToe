<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.GameController">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <top>
        <VBox spacing="8">
            <Label text="Tic-Tac-Toe">
                <font><Font name="Arial Bold" size="22"/></font>
            </Label>
            <Label fx:id="infoLabel" text="Du bist: ? | Am Zug: ?"/>
            <Label fx:id="statusLabel" text="Warte..."/>
        </VBox>
    </top>

    <center>
        <HBox spacing="16">
            <StackPane>
                <GridPane fx:id="gameGrid" hgap="8" vgap="8"/>
                <Canvas fx:id="winCanvas" mouseTransparent="true"/>
            </StackPane>

            <VBox spacing="8" prefWidth="260">
                <Label text="Chat"/>
                <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="320"/>
                <HBox spacing="8">
                    <TextField fx:id="chatInput" promptText="Nachricht..." HBox.hgrow="ALWAYS"/>
                    <Button fx:id="sendChatBtn" text="Senden" onAction="#sendChat"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets top="8" right="0" bottom="0" left="0"/>
            </padding>
            <Button fx:id="rematchBtn" text="Rematch" onAction="#requestRematch" disable="true"/>
            <Button fx:id="backBtn" text="ZurÃ¼ck in die Lobby" onAction="#backToLobby" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>
