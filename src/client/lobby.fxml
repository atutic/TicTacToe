<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LobbyController">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <top>
        <VBox spacing="8">
            <Label text="Tic-Tac-Toe – Lobby">
                <font><Font name="Arial Bold" size="22"/></font>
            </Label>
            <Label fx:id="statusLabel" text="Nicht verbunden."/>
        </VBox>
    </top>

    <center>
        <HBox spacing="16">
            <VBox spacing="10">
                <Label text="Verbindung"/>
                <TextField fx:id="hostnameField" promptText="Server (z.B. localhost)"/>
                <TextField fx:id="portField" promptText="Port (z.B. 8088)"/>
                <TextField fx:id="usernameField" promptText="Spielername"/>

                <Separator/>

                <Label text="Settings"/>
                <ChoiceBox fx:id="modeChoice"/>
                <HBox spacing="8">
                    <Label text="Timer (s)"/>
                    <Spinner fx:id="timerSpinner"/>
                </HBox>

                <Button fx:id="connectBtn" text="Verbinden" onAction="#connect"/>
                <Button fx:id="refreshBtn" text="Räume aktualisieren" onAction="#refreshRooms" disable="true"/>
            </VBox>

            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Räume"/>
                <ListView fx:id="roomsList" prefWidth="320" prefHeight="220"/>
                <HBox spacing="8">
                    <TextField fx:id="roomNameField" promptText="Room-Name (optional)" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="hostBtn" text="Host" onAction="#hostRoom" disable="true"/>
                    <Button fx:id="joinBtn" text="Join" onAction="#joinRoom" disable="true"/>
                </HBox>

                <Separator/>

                <HBox spacing="8">
                    <Button fx:id="scoresBtn" text="Scoreboard" onAction="#requestScores" disable="true"/>
                    <Button fx:id="historyBtn" text="Match-History" onAction="#openHistory" disable="true"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
