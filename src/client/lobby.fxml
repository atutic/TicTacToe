<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="client.LobbyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Tic-Tac-Toe Online">
        <font>
            <Font name="Arial Bold" size="24.0" />
        </font>
    </Label>

    <TextField fx:id="hostnameField" promptText="Server-IP (z.B. localhost)" />
    <TextField fx:id="portField" promptText="Port (z.B. 8088)" text="8088"/>
    <TextField fx:id="usernameField" promptText="Ihr Spielername" />

    <Button onAction="#connectToServer" text="Verbinden" />
    <Label fx:id="statusLabel" textFill="RED" />
</VBox>
